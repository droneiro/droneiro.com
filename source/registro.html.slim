      input type="radio" name="selo-anatel-2" id="intro-yes-2" value="yes" cf-conditional-selo-anatel="null"
      label for="intro-yes-2" Encontrei!

      input type="radio" name="selo-anatel-2" id="intro-no-2" value="no" cf-conditional-selo-anatel="null"
      label for="intro-no-2" Não
    input name="nome" id="nome" cf-questions="Que ótimo! Uma etapa a menos." cf-conditional-selo-anatel="yes"
    input name="nome" id="nome" cf-questions="Que ótimo! Uma etapa a menos." cf-conditional-selo-anatel-2="yes"

