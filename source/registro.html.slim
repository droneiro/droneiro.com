      input type="radio" name="selo-anatel" id="intro-yes" value="yes"
      label for="intro-yes" Sim

      input type="radio" name="selo-anatel" id="intro-no" value="no"
      label for="intro-no" Não

      input type="radio" name="selo-anatel" id="intro-null" value="null"
      label for="intro-null" Não faço ideia

    / fieldset cf-questions="Sem problemas!||Fique tranquilo.||Relaxa!&&Dê uma olhadinha no seu drone e no seu rádio e veja se encontra algum selo com a marca da anatel nele.&&Encontrou?" cf-input-placeholder="Escolha uma opção"
